{
  "name": "csshat-language-sass-bourbon",
  "title": "Sass (bourbon)",
  "version": "1.0.1",
  "description": "Sass language",
  "main": "main",
  "scope": "source.scss",
  "codeLanguage": true,
  "engines": {
    "csshat": "~2.0.0",
    "avocode": "*"
  },
  "homepage": "https://github.com/csshat/language-sass-bourbon",
  "repository": {
    "type": "git",
    "url": "https://github.com/csshat/language-sass-bourbon"
  },
  "bugs": {
    "url": "https://github.com/csshat/language-sass-bourbon/issues"
  },
  "author": "Tomas Hanacek <tomashanacek@avocode.com> (https://github.com/tomashanacek)",
  "contributors": [
    "Petr Brzek <petrbrzek@abdoc.net> (https://github.com/petrbrzek)"
  ],
  "license": "MIT",
  "dependencies": {
    "octopus-helpers": "^1.0.0",
    "octopus-sass": "^0.1.0"
  },
  "settings": {
    "inheritFontStyles": {
      "type": "boolean",
      "default": true
    },
    "selector": {
      "type": "boolean",
      "default": false
    },
    "selectorTextStyle": {
      "type": "hidden",
      "options": [
        "dash-case",
        "snake_case",
        "camelCase"
      ],
      "default": "dash-case"
    },
    "selectorType": {
      "type": "select",
      "options": [
        "id",
        "class",
        "element"
      ],
      "default": "class"
    },
    "colorType": {
      "type": "select",
      "options": [
        "hex",
        "rgb",
        "hsl"
      ],
      "default": "hex"
    },
    "scssSyntax": {
      "type": "boolean",
      "default": true
    },
    "showTextSnippet": {
      "type": "boolean",
      "default": true
    },
    "showAbsolutePositions": {
      "type": "boolean",
      "default": false
    },
    "unit": {
      "type": "hidden",
      "options": [
        "px",
        "em",
        "rem"
      ],
      "default": "px"
    },
    "useColorName": {
      "type": "boolean",
      "default": true
    },
    "quoteType": {
      "type": "select",
      "options": [
        "'",
        "\""
      ],
      "default": "\""
    }
  },
  "bundledDependencies": [
    "octopus-helpers",
    "octopus-sass"
  ]
}
